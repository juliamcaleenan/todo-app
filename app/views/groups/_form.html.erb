<%= render "shared/errors", obj: @group %>

<div class="well">
  <%= form_for @group, html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "col-xs-2 control-label" %>
      <div class="col-xs-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-xs-2 control-label" %>
      <div class="col-xs-10">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <%= f.submit @group.new_record? ? "Create" : "Update", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>